<Window x:Class="WinSleepWell.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WinSleepWell" Height="400" Width="625">
    <Grid>
        <Button Content="Get Mouse and Touchpad Info" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="180" Click="Button_Click"/>
        <ComboBox Name="MouseInfoComboBox" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="580" SelectionChanged="MouseInfoComboBox_SelectionChanged"/>
        <Button Name="EnableButton" Content="Enable" HorizontalAlignment="Left" Margin="10,100,0,0" VerticalAlignment="Top" Width="80" Click="EnableButton_Click" IsEnabled="False"/>
        <Button Name="DisableButton" Content="Disable" HorizontalAlignment="Left" Margin="100,100,0,0" VerticalAlignment="Top" Width="80" Click="DisableButton_Click" IsEnabled="False"/>
    </Grid>
</Window>
